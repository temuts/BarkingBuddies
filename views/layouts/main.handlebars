                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/profile">Profile</a>
                  </li>
                  {{#if logged_in}}
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page"href="/logout">Logout</a>
                  </li>
