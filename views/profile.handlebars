<div class="container-md pt-5 text-center"> 
        <h1 class="display-6">My Profile</h1> 
    </div>
    <div class="container mt-5">
        <div class="row justify-content-center"> 
            <div class="col-md-5 user-profile-box text-center owner-container">
                <div class="m-4">
                    <img src="user-profile.jpg" alt="User Profile Picture" class="img-fluid rounded-circle">
                </div>
                <h2 class="mt-3">{{name}}</h2>
                <p>{{description}}</p>
            </div>
            {{#each pets as |pet|}}
            <div class="col-md-5 dog-profile-box text-center pet-container">
                <div class="m-4">
                    <img src="user-profile.jpg" alt="User Profile Picture" class="img-fluid rounded-circle">
                </div>
                <h2 class="mt-3">{{pet.name}}</h2>
                <p>{{pet.description}}</p>
                <p class="text-center"><strong>Age:</strong> {{pet.age}} years</p>
                <p class="text-center"><strong>Breed:</strong> {{pet.breed}}</p>
            </div>
            {{/each}}
            
        </div>
    </div>

<div class="container-md p-3">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-container">
            <div class="form-group text-center label-container">
                <label for="availability"><strong>Availability:</strong></label>
                <div>{{day.name_of_day}}</div>
            </div>
            <div class="form-group text-center mt-3 label-container">
                <label for="location"><strong>Location:</strong></label>
                <div>{{locationData}}</div>
            </div>
        </div>
    </div>
</div>

<div class="container-md p-3">
  <div class="row justify-content-center">
    <!-- Buddy Information on the Left -->
    <div class="col-md-3 text-center buddy-box-left">
      <h4>Buddy Information</h4>
      {{#each buddiesPetValues as |buddies|}}
      <div class="buddy">
        <img src="/img/{{buddies.img}}" class="img-fluid pet-pic" alt="..." />
        <p><strong>Name:</strong> {{buddies.name}}</p>
      </div>
      {{/each}}
    </div>

    <!-- Owner Information on the Right -->
    <div class="col-md-3 buddy-box-right">
      <h4>Owner Information</h4>
      {{#each buddies_info as |buddy|}}
      <div>
        <p><strong>Owner:</strong> {{buddy.name}}</p>
        <p><strong>Dates Available:</strong> {{buddy.day.name_of_day}}</p>
        <p><strong>Location:</strong> {{buddy.location.name}}</p>
        <p><strong>Phone Number:</strong> {{buddy.phone}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</div>





